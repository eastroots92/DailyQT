<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabBar_height"
        android:background="@color/backgroundWhite"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_inner"
        android:paddingBottom="@dimen/margin_inner"
        android:orientation="horizontal"
        android:gravity="right"
        >

        <LinearLayout
            android:id="@+id/write_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:fontFamily="@font/nanum_myeongjo_bold"
                android:textSize="@dimen/text_inner_middle"
                android:layout_marginRight="12dp"
                android:text="글쓰기"
                />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/write_btn"
                />

        </LinearLayout>


    </LinearLayout>
</layout>